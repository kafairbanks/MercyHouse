    <td scope="row"><%= @applicant.AEmail %></td>
  </tr>
  <tr>
    <td scope="row">Minor?</td>
    <td scope="row"><%= check_box_tag 'AMinor', '', @applicant.AMinor, onclick:"return false;" %></td>
  </tr>
  <tr>
    <td scope="row">Age</td>
    <td scope="row"><%= @applicant.AAge %></td>
  </tr>
  <tr>
