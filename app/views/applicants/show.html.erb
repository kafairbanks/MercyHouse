<h3 style="margin:30px">Applicant <%= @applicant.id %></h3>

<p id="notice"><%= notice %></p>

<div style="margin:30px">
  <%if session[:user_role] == "admin"%>
    <%= link_to 'Back', applicants_path %> |
  <%end%>
  <%= link_to 'Edit', edit_applicant_path(@applicant) %> |
  <!-- The applicants would go back to their dashboard but the admins can see all of the applicants -->
  <%if session[:user_role] == "admin"%>
    <%= link_to 'See their applications', applications_path+"?utf8=✓&name=#{@applicant.AName}&commit=Search&show_booked=" %>
  <%else%>
    <%= link_to 'Back to dashboard', show_dash_path %>
  <%end%>
</div>
