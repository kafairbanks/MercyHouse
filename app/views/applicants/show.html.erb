    <td scope="row">Allow Name Use?</td>
    <td scope="row"><%= check_box_tag 'allowsUseOfName', '', @applicant.allowsUseOfName, onclick:"return false;" %></td>
  </tr>

  <!--Only the Admins can edit the red tagging and application permission-->
  <%if session[:user_role] == "admin"%>
    <tr>
      <td scope="row">Red Flag?</td>
      <td scope="row">
        <%= check_box_tag 'redFlag', '', @applicant.redFlag, onclick:"return false;" %>
      </td>
    </tr>
    <% if @applicant.redFlag %>
    <tr>
      <td scope="row"> Red Flagged Reason: </td> 
      <td scope="row">
        <%= @applicant.RedFlagReason %> 
      </td>
    </tr>
    <%end%>
    <tr>
      <td scope="row">Can submit application?</td>
      <td scope="row"><%= check_box_tag 'canSubmitApplication', '', @applicant.canSubmitApplication, onclick:"return false;" %></td>
    </tr>
    <tr>
      <td scope="row">Background Check Completed?</td>
      <td scope="row">
        <%= check_box_tag 'BackgroundCheckCompleted', '', @applicant.BackgroundCheckCompleted, onclick:"return false;" %>
        <% if @applicant.BackgroundCheckCompleted %><%= @applicant.BackgroundCheckDate %><%end%>
      </td>
    </tr>

    <tr>
      <td scope="row"> Background Check Waived? </td>
      <td scope="row">
        <%= check_box_tag 'BackgroundCheckWaived', '', @applicant.BCWaived, onclick:"return false;"%>
      </td>
      <% if @applicant.BCWaived %>
      <tr>
        <td scope="row"> Reason for waiving background check: </td>
        <td>
          <%= @applicant.BCReason %>
        </td>
      </tr>
      <%end%>
    </tr>
  <%end%>

