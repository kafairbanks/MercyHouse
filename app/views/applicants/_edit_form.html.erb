      <%= form.label :CGName, "Care Giver's Name" %>
      <%= form.text_field :CGName, id: "CGName", class: "form-control", placeholder: "Care Giver Name", value: @applicant.CGName %>
    </div>
  </div>

  <div class="form-row">
    <div class="field form-group col-md-3">
      <%= form.label :SPHomePhone, "Spouse's/Parent's Home Phone" %>
      <%= form.telephone_field :SPHomePhone, id: "SPHomePhone", class: "form-control", placeholder: "XXX-XXX-XXXX", value: @applicant.SPHomePhone %>
