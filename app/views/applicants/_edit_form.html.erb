    <div class="field form-group col-md-3">
      <%= form.label :CGHomePhone, "Care Giver's Home Phone" %>
      <%= form.telephone_field :CGHomePhone, id: "CGHomePhone", class: "form-control", placeholder: "XXX-XXX-XXXX", value: @applicant.CGHomePhone %>
