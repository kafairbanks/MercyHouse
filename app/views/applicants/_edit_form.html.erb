      <%= form.label :AName, "Applicants's Name" %>
      <%= form.text_field :AName, id: "AName", class: "form-control", placeholder: "Applicant Name", value: @applicant.AName, :required => true %>
    </div>

    <div class="field form-group col-md-6">
      <%= form.label :AEmail, "Applicants's Email" %>
      <%= form.text_field :AEmail, id: "AEmail", class: "form-control", placeholder: "name@example.com", value: @applicant.AEmail, :required => true %>
    </div>
  </div>

  <div class="form-row">
    <div class="field form-group col-md-6">
      <%= form.label :SPName, "Spouse's/Parent's Name" %>
      <%= form.text_field :SPName, id: "SPName", class: "form-control", placeholder: "Spouse/Parent Name", value: @applicant.SPName %>
    </div>
