<%= form_with(model: coordinator, local: true) do |form| %>
  <% if coordinator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coordinator.errors.count, "error") %> prohibited this coordinator from being saved:</h2>

      <ul>
      <% coordinator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-row">
    <div class="field form-group col-md-6">
      <%= form.label :HCName, "Name"%>
      <%= form.text_field :HCName, id: "HCName", class: "form-control", placeholder: "House Coordinator Name", :required => true%>
    </div>
    <div class="field form-group col-md-6">
      <%= form.label :HCEmail, "Email"%>
      <%= form.text_field :HCEmail, id: "HCEmail", class: "form-control", placeholder: "House Coordinator Email", :required => true%>
    </div>
  </div>
  <div class="form-row">
    <div class="field form-group col-md-6">
      <%= form.label :HCPhone, "Phone Number"%>
      <%= form.telephone_field :HCPhone, id: "HCPhone", class: "form-control", placeholder: "XXX-XXX-XXXX"%>
    </div>
  </div>

  <div class="actions" align="center">
    <%= form.submit "Create Coordinator", class: "btn btn-primary" %>
  </div>
<% end %>
