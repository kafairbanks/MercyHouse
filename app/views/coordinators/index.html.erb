<p id="notice"><%= notice %></p>

<h1 style="margin:30px">Coordinators</h1>

<table class="table table-striped table-responsive" style="margin:30px;width:95%">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Phone</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @coordinators.each do |coordinator| %>
    <tr>
      <td scope="row"><%= coordinator.HCName%></td>
      <td scope="row"><%= coordinator.HCEmail %></td>
      <td scope="row"><%= coordinator.HCPhone %></td>
      <td scope="row"><%= link_to 'Details', coordinator %></td>
      <td scope="row"><%= link_to 'Edit', edit_coordinator_path(coordinator) %></td>
      <td scope="row"><%= link_to 'Delete', coordinator, method: :delete, data: { confirm: 'Are you sure? Deleting an coordinator will also delete their associated applications and bookings.' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New coordinator', new_coordinator_path, class: "btn btn-primary", style:"margin:30px" %>
