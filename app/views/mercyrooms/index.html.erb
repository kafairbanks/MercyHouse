<p id="notice"><%= notice %></p>

<h1 style="margin:30px">Rooms</h1>

<%= form_tag mercyrooms_path, :method => :get do %>
  <div class="form-row default-margin">
    <div class="field form-group" style="margin-top: 5px;">
      House Name:
    </div>
    <div class="field form-group col-md-3">
      <%= text_field_tag "name", nil, value: "#{params['name']}", class: "form-control" %>
    </div>
    <div class="field form-group col-md-3">
      <%= submit_tag 'Search', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<% @mercyrooms.each do |mercyroom| %>
  <div style="padding-bottom: 2%; padding-left: 2%; padding-right: 2%;">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to mercyroom.RoomName, mercyroom %>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= mercyroom.HouseName %></h6>
        <h6 class="card-subtitle mb-2 text-muted"><%= mercyroom.RoomDesc %></h6>
        <h6 class="card-subtitle mb-2 text-muted">First Floor: <%= mercyroom.firstfloor %></h6>
        <h7 class="card-link"><%= link_to 'Edit', edit_mercyroom_path(mercyroom) %></h7>
        <h7 class="card-link"><%= link_to 'Delete', mercyroom, method: :delete, data: { confirm: 'Are you sure?' } %></h7>
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'New Room', new_mercyroom_path, class: "btn btn-primary", style:"margin:30px" %>
